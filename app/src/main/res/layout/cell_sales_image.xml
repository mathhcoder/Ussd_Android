<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/themeColorLight"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewSales"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="144dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitleSaleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bold"
                android:textColor="@color/themeColorDark"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewBodySaleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/themeColorMidum"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_calendar"
                    app:tint="@color/themeColorDark" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewStartDateImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:text="2020.02.22"
                    android:layout_weight="1"
                    android:textColor="@color/themeColorDark"
                    android:textSize="14sp"
                    app:fontFamily="@font/regular"
                    app:layout_constraintStart_toEndOf="@+id/imageViewStartImage"
                    tools:layout_editor_absoluteY="0dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewEndDateImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="2018.01.06"
                    android:textColor="@color/themeColorDark"
                    android:textSize="14sp"
                    app:fontFamily="@font/regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="0dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_calendar"
                    app:tint="@color/themeColorDark" />


            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</FrameLayout>