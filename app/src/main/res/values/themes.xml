<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Ussd" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/bold</item>
        <item name="bottomSheetDialogTheme">@style/Widget.Ussd.BottomSheet.Dialog</item>
        <item name="android:navigationBarColor">@color/themeColorNormal</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="android:colorPrimaryDark">@color/colorStatusBar</item>
        <item name="android:statusBarColor">@color/themeColorNormal</item>




    </style>

    <style name="Theme.Ussd.Main" parent="Theme.Ussd">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorSecondary</item>

        <item name="colorSecondary">@color/themeColorDark</item>
        <item name="colorSecondaryVariant">@color/themeColorDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">#fff</item>

    </style>


    <style name="My.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:inset">0dp</item>
        <item name="android:thumb">@drawable/ic_thumb</item>
        <item name="track">@drawable/ic_track</item>
        <item name="trackTint">@drawable/bg_track</item>
        <item name="thumbTint">@color/themeColorLight</item>
    </style>






</resources>